<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duan.HomeController">

    <!-- Thanh bên trái -->
    <left>
        <VBox prefHeight="504.0" prefWidth="230.0" spacing="20" style="-fx-padding: 20;">
            <!-- Logo -->
            <ImageView fitHeight="184.0" fitWidth="224.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../Image/logo-chat.png" />
                </image>
            </ImageView>

            <!-- Các nút -->
            <Button onAction="#showDashboard" prefHeight="45.0" prefWidth="173.0" text="Trang chủ">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button onAction="#showProducts" prefHeight="45.0" prefWidth="175.0" text="Sản phẩm">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button onAction="#showOrders" prefHeight="45.0" prefWidth="175.0" text="Khách hàng">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button onAction="#showEmployees" prefHeight="45.0" prefWidth="175.0" text="Nhân viên">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button onAction="#showInvoices" prefHeight="45.0" prefWidth="175.0" text="Đơn hàng">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <Button onAction="#showInvoiceDetails" prefHeight="45.0" prefWidth="175.0" text="Chi tiết hóa đơn">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>

            <!-- Khoảng trống đẩy nút Đăng xuất xuống -->
            <Region VBox.vgrow="ALWAYS" />

            <!-- Nút Đăng xuất -->
            <Button onAction="#logout" prefHeight="45.0" prefWidth="175.0" text="Đăng xuất">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
        </VBox>
    </left>

    <!-- Khu vực nội dung chính -->
    <center>
        <AnchorPane fx:id="contentArea" prefHeight="687.0" prefWidth="1207.0">
            <children>
                <TextField fx:id="text" layoutX="283.0" prefHeight="94.0" prefWidth="547.0" text="Shop Bán Nam Quần Áo Nam">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </TextField>
            <ImageView fitHeight="476.0" fitWidth="1109.0" layoutX="51.0" layoutY="146.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../Image/anh-bia-.jpg" />
               </image>
            </ImageView>
            </children>

        </AnchorPane>
    </center>
</BorderPane>
