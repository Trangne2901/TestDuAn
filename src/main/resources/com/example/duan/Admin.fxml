        <Button onAction="#handleManageUsers" text="Quản Lý Người Dùng" />
        <TableView fx:id="productTable" prefHeight="400">
            <columns>
                <TableColumn prefWidth="115.99998188018799" text="Tên Sản Phẩm" />
                <TableColumn prefWidth="79.66669464111328" text="Giá" />
                <TableColumn prefWidth="76.33332824707031" text="Số Lượng" />
                <TableColumn prefWidth="92.33331298828125" text="Hành Động" />
            </columns>
        </TableView>
    </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
