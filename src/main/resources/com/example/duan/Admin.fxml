        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <Label contentDisplay="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Quản Lý Sản Phẩm" />
        <Button onAction="#handleAddProduct" text="Thêm Sản Phẩm" />
