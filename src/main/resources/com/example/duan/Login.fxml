<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Box?>
<VBox styleClass="chinh" alignment="CENTER" prefHeight="750.0" prefWidth="600.0" spacing="20.0"
      style="-fx-background-color: #fac9cf"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea"
      fx:controller="com.example.duan.Login">

    <Label style="-fx-font-size: 50px ;padding: 40;" text="Sign In"/>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT">
            <Label style="-fx-padding: 5px" text="Username"/>
            <TextField fx:id="Username" promptText="Username or email"
                       style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT" style="padding: 50px;">
            <Label style="-fx-padding: 5px" text="Password"/>
            <PasswordField fx:id="Password" promptText="Password"
                           style="-fx-font-size: 15px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-pref-width: 300px;-fx-pref-height: 40px"/>
        </VBox>
    </HBox>
    <HBox alignment="CENTER" spacing="20.0">
        <VBox>
            <CheckBox style="-fx-padding: 10px" fx:id="showPasswordCheckBox" text="Show password"/>
            <Button fx:id="loginButton"
                    style="-fx-pref-width: 295px;-fx-pref-height:40px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-background-color: #560856;-fx-text-fill: white"
                    text="Login"/>
            <Hyperlink graphicTextGap="5.0" prefWidth="159.0" style="-fx-font-size: 15px"
                       text="Forgot your password"/>
        </VBox>

    </HBox>
    <Label text="........................................................................"/>
    <Button fx:id="signButton"
            style="-fx-pref-width: 295px;-fx-pref-height:40px;-fx-background-radius: 20;-fx-border-radius: 20;-fx-background-color: #560856;-fx-text-fill: white"
            text="Sign in"/>
</VBox>
